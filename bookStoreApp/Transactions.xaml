<Page x:Class="bookStoreApp.Transactions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookStoreApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Transactions">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Transactions" FontSize="24" Margin="5"/>

        <DataGrid Margin="5" Grid.Row="1" Grid.Column="0"/>

        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="ISBN" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="iSBNtxtBox" Grid.Column="1" Grid.Row="0" Margin="5"/>

            <TextBlock Text="Customer ID" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="customersIDtxtBox" IsReadOnly="True" IsUndoEnabled="False" Grid.Column="1" Grid.Row="1" Margin="5"/>

            <TextBlock x:Name="quantity" Text="Quantity" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="quantitytxtBox" Grid.Column="1" Grid.Row="2" Margin="5"/>

            <TextBlock Text="Type" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="typetxtBox" Grid.Column="1" Grid.Row="3" Margin="5"/>
            <Image x:Name="imageBox" Grid.Column="2" Grid.RowSpan="4"/>

            <TextBlock Text="Title" Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="titletxtBox" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="4" Margin="5"/>

            <TextBlock Text="Description" Grid.Column="0" Grid.Row="5" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="addresstxtBox" Height="100" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" Margin="5"/>

            <TextBlock Text="Price" x:Name="quantity_Copy" Grid.Column="0" Grid.Row="6" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="quantitytxtBox_Copy" Grid.Column="1" Grid.Row="6" Margin="5"/>

            <TextBlock Text="Total Price" Width="115" FontSize="20" FontWeight="Bold" Grid.Column="0" Grid.Row="7" VerticalAlignment="Center" TextAlignment="Right"/>
            <TextBox x:Name="totalPricetxtBox" FontSize="20" Grid.Column="1" Grid.Row="7" Margin="5"/>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Add" Margin="5"/>
            <Button Content="Remove" Grid.Column="1" Margin="5"/>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="printBtm" Content="Print" Grid.Column="1" Margin="5"/>
            <Button x:Name="editBtm" Content="Edit" Grid.Column="2" Margin="5"/>
            <Button x:Name="backBtm" Content="Back" Click="backBtm_Click" Grid.Column="3" Margin="5" Width="80"/>
        </Grid>
    </Grid>
</Page>
