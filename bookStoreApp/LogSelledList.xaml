<Page x:Class="bookStoreApp.LogSelledList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookStoreApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogSelledList">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Log Selled List" FontSize="24"/>

        <DataGrid Margin="5" Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.2*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="printBtm" Content="Print" Grid.Column="1" Margin="5"/>
            <Button x:Name="editBtm" Content="Edit" Grid.Column="2" Margin="5"/>
            <Button x:Name="backBtm" Content="Back" Width="80" Click="backBtm_Click" Grid.Column="3" Margin="5" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Page>
