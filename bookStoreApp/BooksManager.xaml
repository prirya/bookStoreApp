<Page x:Class="bookStoreApp.BooksManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:bookStoreApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BooksManager">

    <Grid>
        <TextBox x:Name="userIDtxtBox" HorizontalAlignment="Left" Height="23" Margin="498,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" IsUndoEnabled="False" IsReadOnly="True"/>
        <TextBox x:Name="nameBooktxtBox" HorizontalAlignment="Left" Height="23" Margin="498,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <TextBox x:Name="emailtxtBox" HorizontalAlignment="Left" Height="23" Margin="498,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="addresstxtBox" HorizontalAlignment="Left" Height="110" Margin="498,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <Label Content="ISBN" HorizontalAlignment="Left" Margin="383,52,0,0" VerticalAlignment="Top" Height="23" Width="110" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
        <Label Content="Type" HorizontalAlignment="Left" Margin="383,214,0,0" VerticalAlignment="Top" Height="23" Width="110" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="383,77,0,0" VerticalAlignment="Top" Height="23" Width="110" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
        <Label Content="Description" HorizontalAlignment="Left" Margin="384,237,0,0" VerticalAlignment="Top" Height="23" Width="110" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="498,357,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Clear" HorizontalAlignment="Left" Margin="581,357,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid HorizontalAlignment="Left" Height="300" Margin="19,52,0,0" VerticalAlignment="Top" Width="345"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="181,357,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="21,357,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Remove" HorizontalAlignment="Left" Margin="101,357,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="backBtm" Content="Back" HorizontalAlignment="Left" Margin="668,357,0,0" VerticalAlignment="Top" Width="75" Click="backBtm_Click" />
        <Button x:Name="showAllListBtm" Content="Show all" HorizontalAlignment="Left" Margin="261,357,0,0" VerticalAlignment="Top" Width="103" Click="showAllListBtm_Click"/>
        <Label Content="Books Manager" HorizontalAlignment="Left" Margin="11,-1,0,0" VerticalAlignment="Top" Height="44" Width="779" FontSize="24"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Margin="433,105,0,0" VerticalAlignment="Top" Height="23" Width="61" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
        <TextBox x:Name="emailtxtBox_Copy" HorizontalAlignment="Left" Height="23" Margin="498,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="nameBooktxtBox_Copy" HorizontalAlignment="Left" Height="23" Margin="498,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245"/>
        <Label Content="Tile" HorizontalAlignment="Left" Margin="383,186,0,0" VerticalAlignment="Top" Height="23" Width="110" VerticalContentAlignment="Center" FlowDirection="RightToLeft"/>
        <Image x:Name="imageBox" HorizontalAlignment="Left" Height="129" Margin="603,52,0,0" VerticalAlignment="Top" Width="140"/>
        <Button Content="Brower" HorizontalAlignment="Left" Margin="498,136,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="Clear Image" HorizontalAlignment="Left" Margin="498,161,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Page>
